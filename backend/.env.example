# Example environment variables for the backend (Spring Boot)
# Copy this file to .env or set real environment variables in your shell before running

# JDBC URL for MySQL
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/movilidad
SPRING_DATASOURCE_USERNAME=movilidad_user
SPRING_DATASOURCE_PASSWORD=12345678

# Optional overrides
SPRING_DATASOURCE_DRIVER=com.mysql.cj.jdbc.Driver
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_HIBERNATE_DIALECT=org.hibernate.dialect.MySQL8Dialect
SPRING_DATASOURCE_TEST_ON_BORROW=true
SPRING_DATASOURCE_VALIDATION_QUERY=SELECT 1
